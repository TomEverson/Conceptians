---

import { getUser } from "@astro-auth/core";
const user = getUser({ client: Astro });

---


<header>
    <nav class="d-flex align-items-center justify-content-between flex-column w-100 h-100" id="navbar">
        <div class="logo" id="logo">
            <a href="https://conceptians.org/">
                <img class="me-auto ms-0" src="img/C-logo.png" alt="">
            </a>
             </div>
        <a class="profile flex-column align-items-center justify-content-center" id="profile" href={user? "../user" : "#"}>
            
            <img src={user? user.user.image : "img/none.png"} alt="user" class="rounded-circle">
            {user? 
            <p class="username mt-3">
                {user.user.name}
                </p>
            :
           <div class="login align-items-center justify-content-center" id="login">
            <a href="../login">
                Login
                </a>
            </div>
            }
        </a>
        <ul class="menu flex-column align-item-center mt-5" id="menu">
            <div class="dropdown"><a rel="prefetch" href="../blogs/">Blogs</a>                     
                    </div>
            <div class="dropdown"><a>Clubs</a>
                </div>
            <div class="dropdown"><a>Podcasts</a>
                </div>
            <div class="dropdown"><a>Learn</a>
                </div>
            <div class="dropdown"><a>About Us</a>
                </div>
        </ul>
        <div class="hamburger" id="menu-button"><img id="hamburger" src="img/arrow.png"></div>
    </nav>

</header>

<style>


header{
    position: absolute;
    width: 4vw;
    height: 100vh;
    background: linear-gradient(102.44deg, #DEFFEB 9.56%, #DBEFFF 43.85%, #C1D5FB 78.56%);
    border: 1px solid #FFFFFF;
    opacity: 1;
    z-index: 10;
    transition: all 500ms ease-in-out;
    transform: translateX(-100px);
}

nav {
    padding: 6vh 0vw;
    border-bottom: 1px solid rgba(0,0,0,.12);
}

.show{
    transform: translateX(0) !important;
    transform: translateY(0) !important;
    opacity: 1 !important;
}

nav img {
    margin-top: 8px;
}

.menu {
    opacity: 0;
    display: none;
    gap: 50px;
    text-decoration: none;
}


.dropdown {
    width: 102px;
    height: 25px;
    position: relative;
}

.dropdown a {
    cursor: pointer;
    position: relative;
    font-family: 'Mulish', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 32px;
    text-decoration: none;
    color: black;
}

.dropdown a::after{
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    background: red;
    width: 100%;
    height: 2px;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 250ms ease-in;
}

.dropdown a:hover::after{
    transform: scaleX(1);
}

.username{
    font-family: 'Mulish', sans-serif;
    font-weight: 600;
    font-size: 24px;
}


.profile{
    cursor: pointer;
    text-decoration: none;
    color: black;
    display: none;
    transition: all 500ms;
}

.profile img{
    width: 75px;
    height: 75px;
}

.login{
    width: 200px;
    height: 50px;
    border-radius: 25px;
    background: aquamarine;
    display: none;
}

.login a{
    font-family: 'Mulish', sans-serif;
    font-size: 20px;
    text-decoration: none;
}

.active{
    display: flex;
    opacity: 1;
}

.slide{
    width: 15vw;
}

.hamburger img{
    transition: all 500ms ease-in-out;
}

.ham-slide{
    transform: rotate(180deg);
    margin-left: 10rem;

}

.logo-slide{
    display: none;
}

.profile-show{
    display: flex;
}

.login-show{
    display: flex;
}

@media (max-width: 992px) {
    nav{
        padding: 1vh 2vw;
    }

    .menu{
        gap: 3px;
    }
}

@media (max-width: 767px) {
    .menu{
        position: absolute;
        width: 100vw;
        height: 80vh;
        z-index: 20;
        justify-content: center;
        align-items: center;
        top: 11%;
        left: -100%;
        flex-direction: column;
        gap: 3rem;
        background: linear-gradient(102.44deg, #EAFFF4 9.56%, rgba(198, 244, 220, 0) 96.17%);
        transition: all ease-in-out 0.25s;
    }

    .hamburger, .hamburger span{
        display: flex;
    }

    nav{
        justify-content: space-between !important;
        padding: 0vh 2vw;
    }

    nav img{
        width: 150px;
        height: auto;
    }

    main section{
        flex-direction: column;
    }

}

</style>

<script is:inline>  
    const header = document.querySelector('header')

    const menu_button = document.getElementById('menu-button');
    const menu = document.getElementById('menu');
    const hamburger = document.getElementById('hamburger');
    const logo = document.getElementById('logo')
    const profile = document.getElementById('profile')
    const login = document.getElementById('login')

    menu_button.addEventListener("click", function () {
        hamburger.classList.toggle('ham-slide')
        menu.classList.toggle('active')
        header.classList.toggle('slide')
        logo.classList.toggle('logo-slide')
        profile.classList.toggle('profile-show')
        login.classList.toggle('login-show')
    })

    const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
        entry.target.classList.toggle("show", entry.isIntersecting)
        if (entry.isIntersecting) observer.unobserve(entry.target)
    })
},{
    rootMargin: "300px"
})

    observer.observe(header)

</script>