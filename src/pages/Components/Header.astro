<header>
    <nav class="d-flex align-items-center">
        <a href="https://conceptians.org/">
            <img class="me-auto ms-0" src="img/C.png" alt="">
        </a>
        <ul class="menu d-flex text-center ms-auto" id="menu">
            <div class="dropdown"><a rel="prefetch" href="/blogs/">Blogs</a>                     
                    </div>
            <div class="dropdown"><a>Resources</a>
                </div>
            <div class="dropdown"><a>Podcasts</a>
                </div>
            <div class="dropdown"><a>Learn</a>
                </div>
            <div class="dropdown"><a>About Us</a>
                </div>
        </ul>
        <div class="hamburger" id="menu-button"><span></span><span></span><span></span></div>
    </nav>

</header>

<style>

* {
    margin: 0;
    padding: 0;
}


nav {
    padding: 1vh 6vw;
    border-bottom: 1px solid rgba(0,0,0,.12);
    transform: translateY(-100px);
    transition: 1000ms;
    opacity: 0;
}

.show{
    transform: translateX(0) !important;
    transform: translateY(0) !important;
    opacity: 1 !important;
}

nav img {
    margin-left: 150px;
    width: 180px;
    height: auto;
    margin-top: 8px;
}

.menu {
    margin-left: 150px;
    gap: 10px;
    text-decoration: none;
}


.dropdown {
    width: 102px;
    height: 25px;
    position: relative;
}

.dropdown a {
    cursor: pointer;
    position: relative;
    font-family: 'Mulish', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 32px;
    text-decoration: none;
    color: black;
}

.dropdown a::after{
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    background: red;
    width: 100%;
    height: 2px;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 250ms ease-in;
}

.dropdown a:hover::after{
    transform: scaleX(1);
}


.hamburger {
    height: 80px;
    width: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 0.35rem;
    margin-top: 10px;
    display: none;
}

.hamburger span {
    width: 50%;
    height: 5%;
    background-color: black;
    border-radius: 50px;
}

.active{
    left: 0% !important;
}

@media (max-width: 992px) {
    nav{
        padding: 1vh 2vw;
    }

    .menu{
        gap: 3px;
    }
}

@media (max-width: 767px) {
    .menu{
        position: absolute;
        width: 100vw;
        height: 80vh;
        z-index: 20;
        justify-content: center;
        align-items: center;
        top: 11%;
        left: -100%;
        flex-direction: column;
        gap: 3rem;
        background: linear-gradient(102.44deg, #EAFFF4 9.56%, rgba(198, 244, 220, 0) 96.17%);
        transition: all ease-in-out 0.25s;
    }

    .hamburger, .hamburger span{
        display: flex;
    }

    nav{
        justify-content: space-between !important;
        padding: 0vh 2vw;
    }

    nav img{
        width: 150px;
        height: auto;
    }

    main section{
        flex-direction: column;
    }

}

</style>

<script is:inline>

    const header = document.querySelector('nav')    

    const menu_button = document.getElementById('menu-button');
    const menu = document.getElementById('menu');

    menu_button.addEventListener("click", function () {
        menu.classList.toggle('active')
    })

    const observer = new IntersectionObserver(entries => {
    entries.forEach(entry => {
        entry.target.classList.toggle("show", entry.isIntersecting)
        if (entry.isIntersecting) observer.unobserve(entry.target)
    })
},{
    rootMargin: "30px"
})

    observer.observe(header)

</script>