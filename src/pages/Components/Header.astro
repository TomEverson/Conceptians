@import url('https://fonts.googleapis.com/css2?family=Mulish:wght@200;300;400&family=Noto+Sans+Myanmar:wght@200;400;500;600&display=swap');

* {
    margin: 0;
    padding: 0;
}


nav {
    padding: 1vh 6vw;
    display: flex;
    align-items: center;
    border-bottom: 1px solid rgba(0,0,0,.12);
}



nav img {
    margin-left: 150px;
    width: 180px;
    height: auto;
    margin-top: 8px;
}

.menu {
    margin-left: 150px;
    gap: 10px;
    text-decoration: none;
}


.dropdown {
    width: 102px;
    height: 25px;
    position: relative;
}

.dropdown a {
    cursor: pointer;
    position: relative;
    font-family: 'Mulish', sans-serif;
    font-style: normal;
    font-weight: 400;
    font-size: 16px;
    line-height: 32px;
    text-decoration: none;
    color: black;
}

.dropdown a::after{
    content: '';
    position: absolute;
    left: 0;
    bottom: 0;
    background: red;
    width: 100%;
    height: 2px;
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 250ms ease-in;
}

.dropdown a:hover::after{
    transform: scaleX(1);
}


</style>